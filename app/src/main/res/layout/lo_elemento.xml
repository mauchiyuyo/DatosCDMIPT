<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/txtAnalogMRID_NFC"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="MRODOOOOOO"
        android:inputType="textPersonName"
        android:maxLength="10"
        android:textColor="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:srcCompat="?android:attr/listDivider" />

    <CheckBox
        android:id="@+id/chkAliasNameEscogido"
        android:layout_width="250dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:height="50dp"
        android:hint="Alias Name escogido para NFC"
        android:textColor="@color/gray"
        app:layout_constraintStart_toEndOf="@+id/txtAnalogMRID_NFC"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/txtSistema"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Sistema"
        android:inputType="textPersonName"
        android:maxLength="250"
        android:textColor="@color/gray"
        app:layout_constraintStart_toEndOf="@+id/chkAliasNameEscogido"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>